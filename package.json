{
  "name": "luatex",
  "displayName": "LuaTeX",
  "description": "Extension pack for the LuaTeX development.",
  "version": "0.4.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "publisher": "JosefFriedrich",
  "categories": [
    "Extension Packs",
    "Snippets"
  ],
  "extensionDependencies": [
    "sumneko.lua"
  ],
  "extensionPack": [
    "James-Yu.latex-workshop",
    "sumneko.lua"
  ],
  "icon": "images/luatex.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Josef-Friedrich/vscode_LuaTeX_Lua-API"
  },
  "bugs": {
    "url": "https://github.com/Josef-Friedrich/vscode_LuaTeX_Lua-API/issues",
    "email": "josef@friedrich.rocks"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "luatex.addLuatexLib",
        "title": "Add the `luatex` libary to your workspace",
        "category": "LuaTeX"
      },
      {
        "command": "luatex.removeLuatexLib",
        "title": "Remove the `luatex` libary from your workspace",
        "category": "LuaTeX"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:lua"
  ],
  "license": "GPL-2.0-only",
  "snippets": [
    {
      "language": "lua",
      "path": "./snippets/lua.json"
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
